<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="Theme.GirlTalkGirl" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- action bar background and widget tinting-->
		<item name="colorPrimary">@color/primary</item>
		<item name="colorPrimaryDark">@color/primary_dark</item>
		<item name="colorAccent">@color/accent</item>
		<item name="alertDialogTheme">@style/Theme.GirlTalkGirl.AlertDialog</item>
	</style>

	<style name="Theme.GirlTalkGirl.OverlayActionBar" parent="Theme.GirlTalkGirl">
		<item name="windowActionBarOverlay">true</item>
	</style>

	<style name="Theme.GirlTalkGirl.AlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
		<item name="colorAccent">@color/accent</item>
	</style>
</resources>
