<?xml version="1.0" encoding="utf-8"?>
<manifest
	package="ac.robinson.mediaphone_gtg"
	xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:installLocation="auto">

	<!-- internet permission is for Hierarchy Viewer debugging only, and should be disabled for release -->
	<!-- <uses-permission android:name="android.permission.INTERNET" /> -->
	<uses-permission android:name="android.permission.BLUETOOTH"/>
	<uses-permission android:name="android.permission.CAMERA"/>
	<uses-permission android:name="android.permission.RECORD_AUDIO"/>
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>

	<uses-feature
		android:name="android.hardware.bluetooth"
		android:required="false"/>
	<uses-feature
		android:name="android.hardware.microphone"
		android:required="false"/>
	<uses-feature
		android:name="android.hardware.camera"
		android:required="false"/>
	<uses-feature
		android:name="android.hardware.camera.front"
		android:required="false"/>
	<!-- TODO: replace above camera requirements with camera.any after Android 4.2 (but test unreliable store filtering) -->
	<uses-feature
		android:name="android.hardware.camera.any"
		android:required="false"/>
	<uses-feature
		android:name="android.hardware.camera.autofocus"
		android:required="false"/>
	<uses-feature
		android:name="android.hardware.camera.flash"
		android:required="false"/>
	<!-- faketouch simply does not do what the documentation claims at all (at least on the store) - disabled -->
	<!-- <uses-feature android:name="android.hardware.faketouch" android:required="false" /> -->

	<supports-screens
		android:anyDensity="true"
		android:largeScreens="true"
		android:normalScreens="true"
		android:resizeable="true"
		android:smallScreens="true"
		android:xlargeScreens="true"/>

	<application
		android:name="ac.robinson.mediaphone_gtg.MediaPhoneApplication"
		android:allowBackup="true"
		android:hardwareAccelerated="true"
		android:icon="@drawable/ic_launcher"
		android:label="@string/app_name"
		android:logo="@drawable/ic_launcher"
		android:theme="@style/Theme.GirlTalkGirl">
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.NarrativeBrowserActivity"
			android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN"/>

				<category android:name="android.intent.category.LAUNCHER"/>
			</intent-filter>
		</activity>
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.TemplateBrowserActivity"
			android:label="@string/title_template_browser"/>
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.FrameEditorActivity"
			android:label="@string/title_frame_editor"/>
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.CameraActivity"
			android:label="@string/title_frame_editor"
			android:theme="@style/Theme.GirlTalkGirl.OverlayActionBar"/>
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.AudioActivity"
			android:label="@string/title_frame_editor"/>
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.TextActivity"
			android:label="@string/title_frame_editor"
			android:windowSoftInputMode="stateVisible|adjustResize"/>
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.PlaybackActivity"
			android:configChanges="orientation|keyboardHidden|screenSize"
			android:label="@string/title_playback"
			android:theme="@style/Theme.GirlTalkGirl.NoActionBar"/>
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.SaveNarrativeActivity"
			android:excludeFromRecents="true"
			android:icon="@drawable/ic_launcher_save"
			android:label="@string/title_save_locally"
			android:theme="@style/Theme.GirlTalkGirl.Dialog"/>
		<activity
			android:name=".activity.ResourcesChooserActivity"
			android:label="@string/title_resources"/>
		<activity
			android:name=".activity.ResourceActivity"
			android:label="@string/title_resources"/>
		<activity
			android:name="ac.robinson.mediaphone_gtg.activity.PreferencesActivity"
			android:label="@string/title_preferences"/>
		<activity
			android:name="ac.robinson.mediautilities.SelectDirectoryActivity"
			android:label="@string/title_select_import_directory"
			tools:ignore="MissingRegistered"/>

		<provider
			android:name="ac.robinson.mediaphone_gtg.provider.MediaPhoneProvider"
			android:authorities="mediaphone_gtg"
			android:exported="false"/>
		<!-- authorities *must* be the same as MediaPhone.APPLICATION_NAME -->

		<service
			android:name="ac.robinson.service.ImportingService"
			tools:ignore="MissingRegistered"/>
	</application>

</manifest>
